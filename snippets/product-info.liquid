        {% assign bachunk = ba | strip | split: "</div>" %}

      {% elsif forloop.first %}
        {% assign pretext =  b %}
      {% endif %}
    {% endfor %}   

      
     
      {% comment %} Inventory tracking on product page {% endcomment %}
      {% if product.available and bchunk.first != "back" %}
