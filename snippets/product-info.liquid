            <span class="price"><b>{{ selected_variant.price | money_without_trailing_zeros }}</b></span>
            <span class="prodDesc"> {{ productDescription[11] }} </span>
              {%- endif -%}
            </div>
          </div>
      </div>
      
      
      
    {% assign backOrder = productDescription[10] | strip | split: "<i>" %} 
    {% for b in backOrder %}       
      {% if b contains "</i>" %}
        {% assign bchunk = b | strip | split: "</i>" %}

      {% elsif forloop.first %}
        {% assign pretext =  b %}
      {% endif %}
    {% endfor %} 
      
      
    {% assign backDate = productDescription[10] | strip | split: "<div>" %} 
    {% for ba in backDate %}       
