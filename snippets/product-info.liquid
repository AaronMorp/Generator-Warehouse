        <div id="shippedBy"> Sent via express courier, includes Freight Insurance. Cannot be delivered to PO Boxes or Remote Islands. </div>
      </div>      
      {%- if section.settings.show_share_buttons -%}
        <div class="product-meta__share-buttons hidden-phone">
          
        </div>
      {%- endif -%}   
    {%- endif -%}
      
    </div>
    
    {% if fchunk.first  == "Free" %}
      <div style="margin-top: 10px; font-size: 18px; font-weight: bold"> Free Shipping </div>
    {%- endif -%} 
    
    
    
    {% if fchunk.first  == "Unable" %}
      <div class="shippingCalc"> Shipping Calculator </div>
      <div>
      	<div id="shippingInput"><input type="text" id="shipCalc" name="shipCalc" onkeypress="return isNumber(event)" value placeholder="Enter postcode" onfocus="this.placeholder = ''">
          <button class="calculateButton" onclick="shippingCalculator()">Calculate</button></div>
        <div id="shipPrice" style="display: none;">Unable to calculate shipping. Please contact us for a freight quote on 1300 873 588 or support@generatorwarehouse.com.au </div>
      </div>      
    {%- endif -%}
    
   
    
    
